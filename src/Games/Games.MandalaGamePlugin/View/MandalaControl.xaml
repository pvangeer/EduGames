<UserControl x:Class="Games.MandalaGamePlugin.View.MandalaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:modelView="clr-namespace:Games.MandalaGamePlugin.ModelView"
             xmlns:mandalaGamePlugin="clr-namespace:Games.MandalaGamePlugin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <mandalaGamePlugin:HalfValueConverter x:Key="HalfValueConverter" />
        <mandalaGamePlugin:CanvasMinWidthHeightMultiValueConverter x:Key="CanvasMinWidthHeightMultiValueConverter" />
        <mandalaGamePlugin:GridDataToPathDataConverter x:Key="GridDataToPathDataConverter" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <modelView:MandalaViewModel/>
    </UserControl.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding TestItems}">
<!--            <ListBox.ItemContainerStyle>
